# Obby Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ============================================================================
# AI API KEYS (Required for AI features)
# ============================================================================

# Anthropic API Key (for Claude AI summaries, chat, and insights)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Legacy OpenAI API Key (no longer used after October 2025 migration)
# Kept for backwards compatibility but not required
OPENAI_API_KEY=your_openai_api_key_here_if_needed

# ============================================================================
# GO MICROSERVICES - Standard Protocol (All Enabled by Default)
# ============================================================================

# NOTE: All Go services are now the standard protocol.
# They provide 10x+ performance improvements over Python implementations.
# Set to "false" to disable individual services if needed.

# File Watcher Service (real-time file monitoring via gRPC)
USE_GO_FILE_WATCHER=true
GO_FILE_WATCHER_HOST=localhost
GO_FILE_WATCHER_PORT=50051

# Content Tracker Service (content hashing and diff generation via gRPC)
USE_GO_CONTENT_TRACKER=true
GO_CONTENT_TRACKER_HOST=localhost
GO_CONTENT_TRACKER_PORT=50052

# Query Service (high-performance database queries via gRPC)
USE_GO_QUERY_SERVICE=true
GO_QUERY_SERVICE_HOST=localhost
GO_QUERY_SERVICE_PORT=50053

# SSE Hub Service (Server-Sent Events for real-time updates)
USE_GO_SSE_HUB=true
GO_SSE_HUB_GRPC_HOST=localhost
GO_SSE_HUB_GRPC_PORT=50054
GO_SSE_HUB_HTTP_HOST=localhost
GO_SSE_HUB_HTTP_PORT=8080

# ============================================================================
# EMERGENCY ROLLBACK
# ============================================================================

# Emergency rollback flag - set to "true" to disable ALL Go services
# and fall back to Python implementations. Use only if Go services are failing.
EMERGENCY_ROLLBACK=false

# ============================================================================
# SESSION SUMMARY WATCHER (Optional)
# ============================================================================

# Enable automatic session summary generation in the background
# Default: false (summaries are generated on-demand via UI or API)
SESSION_SUMMARY_WATCHER_ENABLED=false

# ============================================================================
# CLAUDE MODEL CONFIGURATION (Optional)
# ============================================================================

# Override the default Claude model (haiku, sonnet, or opus)
# Default is set in config/settings.py (currently "haiku")
# OBBY_CLAUDE_MODEL=haiku
